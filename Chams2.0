local uis = game:GetService("UserInputService")
local adornments = {} 
_G.Enabled = true 

local function makeAdornment(part)
    local adornment = Instance.new("BoxHandleAdornment")
    adornment.Adornee = part
    adornment.AlwaysOnTop = true
    adornment.ZIndex = 1
    adornment.Size = part.Size
    adornment.Color = BrickColor.new("Bright red")
    adornment.Transparency = 0.1
    adornment.Parent = part
    table.insert(adornments, adornment) 
end

for i,v in pairs(game:GetService("ReplicatedStorage").Player:GetDescendants()) do
    if v:IsA("MeshPart") or v:IsA("Part") then
        makeAdornment(v) 
    end
end

for i,v in pairs(game.Workspace:GetChildren()) do
    if v:FindFirstChild("Head") then 
        for i,v in pairs(v:GetDescendants()) do 
            if v:IsA("MeshPart") or v:IsA("Part") then
                makeAdornment(v) 
            end
        end
    end
end

uis.InputBegan:Connect(function(input, gp)
    if not gp and input.KeyCode == Enum.KeyCode.V then 
        _G.Enabled = not _G.Enabled 
        for i,v in pairs(adornments) do 
            v.Transparency = _G.Enabled and 0.1 or 0.1
        end
    end
end)
